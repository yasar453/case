<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ModeminfoFragment">


    <ImageView
        android:id="@+id/profilPhoto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/ben1" />

    <TextView
        android:id="@+id/username_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="YaÅŸar Baki" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:id="@+id/modemPic_infofragment"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:id="@+id/title_infofragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="30dp"
            android:fontFamily="sans-serif-black"
            android:text="TextView" />

        <EditText
            android:id="@+id/title_editext_infofragment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="30dp"
            android:fontFamily="sans-serif-black"
            android:inputType="textPersonName"
            android:visibility="gone"
             />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/savenewtitle_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Save"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/ic_baseline_edit_24"
        android:visibility="gone"
        android:background="@drawable/reset_btn"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        >
        <TextView
            android:id="@+id/sn_infofragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView" />
        <TextView
            android:id="@+id/macaddres_infofragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView" />
        <TextView
            android:id="@+id/firmware_infofragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView" />
        <TextView
            android:id="@+id/model_infofragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="15dp"
            android:text="TextView" />

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>